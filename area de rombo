#include <iostream>

using namespace std;

int main()
{
    
    int diagonalmayor, diagonalmenor, area;
    cout<<"ingresar la diagona lmayor";
    cin>>diagonalmayor;
    cout<<"ingresar la diagonal menor";
    cin>>diagonalmenor;
    


   
   
   area=(diagonalmayor*diagonalmenor)/2;
   cout<<"El area de rombo es "<<area;
   
   
   return 0;
   }
